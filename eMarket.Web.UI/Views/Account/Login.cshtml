
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_MenuTwoLayout")
<!--/ End Header Inner -->
</header>


<main class="login-form" style="margin-top: 80px; margin-bottom: 80px;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                @{
                    if (!string.IsNullOrEmpty(@ViewBag.LTLD))
                    {
                        <p class="text-muted">Merhaba, daha önce @ViewBag.LTLD tarihinde giriş sisteme giriş yapmışsınız.</p>

                    }
                }
                <div class="card">
                    <div class="card-header">Giriş Yap</div>
                  
                    <div class="card-body">
                        @{
                            if (@ViewBag.ErrorMessageLogin != null)
                            {
                                <div class="alert alert-danger">
                                    <a class="close" data-dismiss="alert" href="#">×</a>@ViewBag.ErrorMessageLogin
                                </div>
                            }
                        }<br/>
                        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                        {

                            <div class="form-group row">
                                <label for="email_address" class="col-md-4 col-form-label text-md-right">E-Mail Adresiniz</label>
                                <div class="col-md-6">
                                    <input type="text" id="email_address" class="form-control" name="Email" required autofocus>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="password" class="col-md-4 col-form-label text-md-right">Şifre</label>
                                <div class="col-md-6">
                                    <input type="password" id="password" class="form-control" name="password" required>
                                </div>
                            </div>

                            <div class="col-md-6 offset-md-4">
                                <input type="submit" class="btn btn-primary btn-sm" value="Giriş Yap"/>
                                <a href="#">
                                    <strong>|</strong> Şifremi Unuttum
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

</main>