<script>
    $(function () {
        $("#ddlcountry").change(function () {
            $.getJSON("/Admin/GetSubCategory",
                { CategoryID: $("#ddlcountry").val() },
                function (d) {
                    var row = "";
                    $("#ddlstate").empty();
                    $.each(d,
                        function (i, v) {
                            row += "<option value=" + v.value + ">" + v.text + "</option>";
                        });
                    $("#ddlstate").html(row);
                });
        });
    });
</script>



