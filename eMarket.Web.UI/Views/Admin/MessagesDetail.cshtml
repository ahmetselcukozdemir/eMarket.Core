@model eMarket.Entity.Message
@{
    ViewData["Title"] = "MessagesDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="animated fadeIn">

        <div class="row">
            <div class="col-xs-12 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <strong>Mesaj</strong> <small> detayı</small>
                    </div>
                    <div class="card-body card-block">
                        <div class="form-group">
                            <label class=" form-control-label">Oluşturulma Tarihi</label>
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
                                <input type="text" value="@Model.CreatedDate" class="form-control" readonly="readonly"/>
                            </div>
                        </div>
                                <div class="form-group">
                                    <label class=" form-control-label">Konu</label>
                                    <div class="input-group">
                                        <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
                                       <input type="text" value="@Model.Subject" class="form-control" readonly="readonly"/>
                                    </div>
                                </div>
                        <div class="form-group">
                            <label class=" form-control-label">Mesaj</label>
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-phone"></i></div>
                                <textarea class="form-control" type="text" name="Content" id="editor" readonly="readonly" placeholder="Açıklama.." class="form-control">@Model.Content</textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="~/lib/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace('editor');
</script>




