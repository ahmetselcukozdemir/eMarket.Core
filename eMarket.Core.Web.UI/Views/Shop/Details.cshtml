@model ProductDetailModel
@{ ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml"; }


@Html.Partial("_MenuTwoLayout")
<!--/ End Header Inner -->
</header>

<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/product-details/vendor/animate/animate.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/product-details/vendor/css-hamburgers/hamburgers.min.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/product-details/vendor/animsition/css/animsition.min.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/product-details/vendor/select2/select2.min.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/product-details/vendor/slick/slick.css">
<!--===============================================================================================-->
<link rel="stylesheet" type="text/css" href="~/product-details/css/util.css">
<link rel="stylesheet" type="text/css" href="~/product-details/css/main.css">
<!-- Product Detail -->
<div class="container bgwhite p-t-35 p-b-80">
    <div class="flex-w flex-sb">
        <div class="w-size13 p-t-30 respon5">
            <div class="wrap-slick3 flex-sb flex-w">
                <div class="wrap-slick3-dots"></div>
                <div class="slick3">
                    @foreach (var item in @Model.Product.ProductImages)
                    {
                       
                                        <div class="item-slick3" data-thumb="/images/products/@item.Url">
                                            <div class="wrap-pic-w">
                                                <img src="~/images/products/@item.Url" alt="IMG-PRODUCT">
                                            </div>
                                        </div>}

                </div>
            </div>
        </div>

        <div class="w-size14 p-t-30 respon5">
            <h4 class="product-detail-name m-text16 p-b-13">
                @Model.Product.Name
            </h4>

            <span class="m-text17">
                @Model.Product.Price.ToString("c")
            </span>

            <p class="s-text8 p-t-10">
                
            </p>
           
            <div class="p-b-45">
                <span class="s-text8 m-r-35"><strong>Ürün Kodu </strong>:  @Model.Product.ProductNumber</span>
            </div>

            <!--  -->
            <div class="wrap-dropdown-content bo6 p-t-15 p-b-14 active-dropdown-content">
                <h5 class="js-toggle-dropdown-content flex-sb-m cs-pointer m-text19 color0-hov trans-0-4">
                    Açıklama
                    <i class="down-mark fs-12 color1 fa fa-minus dis-none" aria-hidden="true"></i>
                    <i class="up-mark fs-12 color1 fa fa-plus" aria-hidden="true"></i>
                </h5>

                <div class="dropdown-content dis-none p-t-15 p-b-23">
                    <p class="s-text8">
                        @Model.Product.Description
                    </p>
                </div>
            </div>

            <div class="wrap-dropdown-content bo7 p-t-15 p-b-14">
                <h5 class="js-toggle-dropdown-content flex-sb-m cs-pointer m-text19 color0-hov trans-0-4">
                    Satıcı Bilgileri
                    <i class="down-mark fs-12 color1 fa fa-minus dis-none" aria-hidden="true"></i>
                    <i class="up-mark fs-12 color1 fa fa-plus" aria-hidden="true"></i>
                </h5>

                <div class="dropdown-content dis-none p-t-15 p-b-23">
                    <p class="s-text8">
                        <strong>  Ad-Soyad</strong> :   @Model.Product.Member.Name @Model.Product.Member.Surname
                    </p> 
                    <p class="s-text8">
                        <strong>  Telefon </strong> :   @Model.Product.Member.Phone
                    </p>
                    <p class="s-text8">
                        <strong>  Adres</strong>  :   @Model.Product.Member.Address
                    </p>
                    <p class="s-text8">
                        <strong>Mağaza Adı </strong>     :   @Model.Product.Member.StoreName
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Relate Product -->
<section class="relateproduct bgwhite p-t-45 p-b-138">
    <div class="container">
        <div class="sec-title p-b-60">
            <h3 class="m-text5 t-center">
                <strong>Benzer Ürünler </strong>
                <hr />
            </h3>
        </div>

        <!-- Slide2 -->
        <div class="wrap-slick2">
            <div class="slick2">


                <!-- Block2 -->
                @{
                    foreach (var item in Model.RelatedProducts)
                    { 
                        var imageHome = item.ProductImages.Where(x => x.IsHome == true).FirstOrDefault();
                        <div href="/Shop/Details/@item.ProductId" class="item-slick2 p-l-15 p-r-15">
                            <div class="block2">
                                <div style="height: 300px;" class="block2-img wrap-pic-w of-hidden pos-relative block2-labelnew">
                                    @if (imageHome != null)
                                    {
                                        <img href="/Shop/Details/@item.ProductId" src="~/images/products/@imageHome.Url" alt="IMG-PRODUCT" href="/Shop/Details/@item.ProductId">
                                    }
                                    else
                                    {
                                        <img href="/Shop/Details/@item.ProductId" class="default-img" src="~/images/notimages.jpg" alt="#" href="/Shop/Details/@item.ProductId">
                                    }

                                    <div class="block2-overlay trans-0-4">
                                        <a href="#" class="block2-btn-addwishlist hov-pointer trans-0-4">
                                            <i class="icon-wishlist icon_heart_alt" aria-hidden="true"></i>
                                            <i class="icon-wishlist icon_heart dis-none" aria-hidden="true"></i>
                                        </a>
                                    </div>
                                </div>

                                <div class="block2-txt p-t-20">
                                    <a href="/Shop/Details/@item.ProductId" class="block2-name dis-block s-text3 p-b-5">
                                        @item.Name
                                    </a>

                                    <span class="block2-price m-text6 p-r-5">
                                        @item.Price.ToString("c")
                                    </span>
                                </div>
                            </div>
                        </div> } }




            </div>
        </div>

    </div>
</section>

