@model eMarket.Core.Web.UI.Models.Blog.BlogModel
@{
    ViewData["Title"] = "BlogEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/lib/jquery-ui/jquery-ui.js"></script>
<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Blog Yazısı Düzenle</strong>
                        <hr>
                    </div>
                    <div class="card-body">
                        <div id="pay-invoice">
                            <div class="card-body">
                                <form asp-action="BlogUpdate" aria-controls="Admin" method="post" enctype="multipart/form-data">
                                    <input type="text" readonly="readonly" id="company" name="BlogId" class="form-control" value="@Model.BlogId">
                                    <div class="form-group">
                                        <label for="cc-payment" class="control-label mb-1">Başlık</label>
                                        <input id="cc-payment" name="Title" type="text" class="form-control" aria-required="true" value="@Model.Title" aria-invalid="false">
                                    </div>
                                    <div class="form-group has-success">
                                        <label for="cc-name" class="control-label mb-1">Açıklama</label>
                                        <input id="cc-name" name="Description" type="text" class="form-control cc-name valid" value="@Model.Description" data-val="true" aria-required="true">
                                    </div>
                                    <div class="form-group has-success">
                                        <div class="row">
                                            <div clas="col-md-6">
                                                <label for="cc-name" class="control-label mb-1">Mevcut Fotograf:</label>
                                                <img src="~/images/blogs/@Model.ImageUrl" width="150" height="150" />
                                            </div>
                                            <div class="vr" style="margin-left: 10px; border-left: 4px solid green; height: 170px;"></div>
                                            <div class="col-md-6">
                                                <input type="file" name="file" class="form-control" id="" />
                                                <p>Eğer mevcut fotografı değiştirmek istiyorsan lütfen resim yüklemesin.</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="cc-number" class="control-label mb-1">İçerik</label>
                                        <textarea type="text" name="Content" id="editor" placeholder="Açıklama.." class="form-control" asp-for="Content"></textarea>

                                    </div>
                                    <div>
                                        <input type="submit" class="btn btn-success btn-lg" value="Güncelle" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>



<script src="~/lib/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace('editor');
</script>


