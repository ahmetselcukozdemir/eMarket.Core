@model IEnumerable<eMarket.Core.Entity.Blog>
@{
    ViewData["Title"] = "BlogPost";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/admin/assets/css/lib/datatable/dataTables.bootstrap.min.css">
<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1 style="font-weight: bold;">Blog Yazılarım</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="#">Dashboard</a></li>
                            <li><a href="#">Table</a></li>
                            <li class="active">Data table</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong>@Model.Count()</strong> adet  yazmış olduğunuz blog yazısı bulunmaktadır.
                    </div>
                    <div class="card-body">
                        @{
                            if (ViewBag.ErrorMessage != null)
                            {
                                <div class="container">
                                    <div class="row">
                                        <div class="alert-group">
                                            <div class="alert alert-danger alert-dismissable">
                                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                                <strong>Hata !</strong> @ViewBag.ErrorMessage
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else if (@Model.Count() < 1)
                            {
                                <div class="container">
                                    <div class="row">
                                        <div class="alert-group">
                                            <div class="alert alert-warning alert-dismissable">
                                                <strong>Uyarı !</strong> Henüz blog yazısı paylaşmamışsınız.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Başlık</th>
                                            <th>Fotoğraf</th>
                                            <th>Oluşturulma Tarihi</th>
                                            <th>Güncelle</th>
                                            <th>Sil</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.Title</td>
                                                    <td><img src="~/images/blogs/@item.ImageUrl" height="50" widht="50" /></td>
                                                    <td>@item.CreatedDate.ToShortDateString()</td>
                                                    <td><a href="/Admin/BlogEdit/@item.BlogId/" style="color: white;" class="btn btn-primary">Güncelle</a></td>
                                                    <td><a onclick="return confirm('Silmek istediğinizden emin misiniz ?')" href="/Admin/BlogDelete/@item.BlogId/" style="color: white;" class="btn btn-danger">Sil</a></td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            }
                        }

                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div><!-- .content -->



<script type="text/javascript">
    $(document).ready(function () {
        $('#bootstrap-data-table-export').DataTable();
    });
</script>


<script src="~/admin/assets/js/lib/data-table/datatables.min.js"></script>
<script src="~/admin/assets/js/lib/data-table/dataTables.bootstrap.min.js"></script>
<script src="~/admin/assets/js/lib/data-table/dataTables.buttons.min.js"></script>
<script src="~/admin/assets/js/lib/data-table/buttons.bootstrap.min.js"></script>
<script src="~/admin/assets/js/lib/data-table/jszip.min.js"></script>
<script src="~/admin/assets/js/lib/data-table/vfs_fonts.js"></script>
<script src="~/admin/assets/js/lib/data-table/buttons.html5.min.js"></script>
<script src="~/admin/assets/js/lib/data-table/buttons.print.min.js"></script>
<script src="~/admin/assets/js/lib/data-table/buttons.colVis.min.js"></script>
<script src="~/admin/assets/js/init/datatables-init.js"></script>

